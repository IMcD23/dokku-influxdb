#!/usr/bin/env bash
export INFLUXDB_ROOT=${INFLUXDB_ROOT:="/var/lib/dokku/services/influxdb"}
export INFLUXDB_IMAGE=${INFLUXDB_IMAGE:="tutum/influxdb"}
export INFLUXDB_DATA_PORT=8086
export INFLUXDB_ADMIN_PORT=8083

export PLUGIN_DATA_ROOT=$INFLUXDB_ROOT
export PLUGIN_DATASTORE_PORTS=($INFLUXDB_DATA_PORT $INFLUXDB_ADMIN_PORT)
export PLUGIN_DEFAULT_ALIAS="DATABASE"
export PLUGIN_ALT_ALIAS="DOKKU_INFLUXDB"
